<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context="technical.test.system.fusion.mainActivity.MainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#212121"
        >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_height="fill_parent">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:id="@+id/image3"
                    android:onClick="doSomething">
                    <ImageView
                        android:scaleType="centerCrop"
                        android:src="@drawable/even"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        />
                    <TextView
                        android:id="@+id/events"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/events"
                        android:layout_gravity="bottom"
                        android:textColor="#DDDDDD"
                        android:padding="20dp"
                        android:gravity="center_horizontal"
                        android:textSize="20dp"
                        />
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="2dip"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:id="@+id/image1"
                android:onClick="doSomething">
                <ImageView
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/back11"
                    android:layout_width="fill_parent"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/txt1"
                    android:padding="8dp"
                    android:textColor="#FFFFFF"
                    android:text="ABOUT FUSION"
                    android:layout_gravity="bottom"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"
                    />
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:padding="2dip"
            android:layout_height="fill_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:id="@+id/image2"
                android:onClick="doSomething"
                >
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:src="@drawable/abtussss"
                    android:scaleType="centerCrop"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:text="ABOUT US"
                    android:layout_gravity="bottom"
                    android:gravity="center_horizontal"
                    android:textSize="20dp"
                    android:textColor="#FFFFFF"
                    />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_margin="2dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:id="@+id/scduele"
                    app:cardBackgroundColor="#1a1a1a"
                    android:onClick="doSomething"
                    >

                    <TextView
                        android:id="@+id/schedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/schedule"
                        android:text="\nSCHEDULE"
                        android:layout_gravity="bottom"
                        android:textColor="#DDDDDD"
                        android:padding="2dp"
                        android:gravity="center_horizontal"
                        android:textSize="20sp"
                        />
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
